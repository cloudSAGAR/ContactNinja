<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Email_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textColor="@color/black"
        style="@style/tv_Medium"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/composse_email" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shape_border_eee">
        <ImageView
            android:id="@+id/search_icon"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_search"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            >

        </ImageView>

        <EditText
            android:id="@+id/ev_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/add_contect_transpernt"
            android:gravity="center|left"
            android:singleLine="true"
            android:hint="@string/search_hint"
            android:textColor="@color/tv_medium"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

        </EditText>
    </LinearLayout>
    <include
        layout="@layout/common_dialog"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>