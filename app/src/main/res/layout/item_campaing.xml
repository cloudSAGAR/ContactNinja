<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                style="@style/tv_regular_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/_3sdp"
                android:gravity="center|left"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/Active_green" />

            <TextView
                android:id="@+id/campaign_name"
                style="@style/tv_regular_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/add_new_group_name"
                android:textColor="@color/text_reg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_pause"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_25_paush_button_line"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:gravity="center"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Pause"
                android:textColor="@color/text_reg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_play"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_25_play_button_line"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:gravity="center"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Start"
                android:textColor="@color/purple_200" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_btn_hold"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_25_inactive_button_line"
            android:gravity="center"
          >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_hold" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_list_back_line">

    </View>

</LinearLayout>