<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:background="@drawable/shape_border_20_white"
        android:orientation="vertical">

        <EditText

            android:id="@+id/editText"
            style="@style/tv_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/add_contect_transpernt"
            android:gravity="center"
            android:textColorHint="@color/otp_header_text_color"
            android:hint="Add custom lable name"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold">

        </EditText>

        <View
            android:id="@+id/view_l"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/editText"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/home_list_add_contect_view"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_l"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="end|center">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/tv_regular"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|end"
                android:textColor="@color/otp_header_text_color"
                android:text="Cancel">

            </TextView>

            <TextView
                android:id="@+id/tv_add"
                style="@style/tv_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"

                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|end"
                android:text="Add"
                android:textColor="@color/purple_200"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_group_otp_logo">

    </ImageView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>