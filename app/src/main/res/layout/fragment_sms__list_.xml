<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mMainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manual_email_and_sms.Fragment.Email_List_Fragment">

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shape_25_white_eee_line">
        <ImageView
            android:id="@+id/search_icon"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_search"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            >

        </ImageView>

        <EditText
            android:id="@+id/ev_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/add_contect_transpernt"
            android:gravity="center|left"
            android:singleLine="true"
            android:hint="@string/search_hint"
            android:textColor="@color/tv_medium"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

        </EditText>
    </LinearLayout>
    <include
        layout="@layout/common_dialog"/>
    <LinearLayout
        android:id="@+id/add_new_contect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_new_contect_icon"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/shape_oval_border_10_white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_plus1"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/add_new_contect"
            style="@style/tv_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/create_new_sms"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_count"
            style="@style/tv_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="center|end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/home_list_back_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/email_list"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>