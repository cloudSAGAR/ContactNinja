<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mMainLayout"
    tools:ignore="RtlHardcoded,Autofill,TextFields"
    tools:context=".Group.SendBroadcast">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"/>
        <LinearLayout
            android:id="@+id/add_new_contect_layout"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/add_new_contect_icon"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/_35sdp"
                app:riv_border_color="@color/purple_200"
                app:riv_border_width="0dp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <EditText
                    android:id="@+id/add_new_contect"
                    style="@style/tv_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center|left"
                    android:background="@color/add_contect_transpernt"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColorHint="@color/tv_medium"
                    android:hint="@string/add_group_txt"
                    android:textColor="@color/tv_medium"
                   />
                <View
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/home_list_back_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>




        </LinearLayout>
        <EditText
            android:id="@+id/add_detail"
            style="@style/tv_regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_border_ccc"
            android:gravity="top|left"
            android:hint="@string/add_group_description"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/tv_medium" />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/tv_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/min_text"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/add_group_description_min_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/tv_regular"
                android:background="@drawable/shape_blue_back"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/group_broadcast"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/tv_regular"
                android:gravity="center"
                android:background="@drawable/shape_blue_back"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/group_broadcast_group"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp">

            </TextView>
        </LinearLayout>


        <com.google.android.material.tabs.TabLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tabLayout"
            style="@style/tv_bold"
            app:tabIndicatorColor="@color/home_list_tab_bg"
            app:tabSelectedTextColor="@color/tv_medium"
            app:tabTextColor="@color/bz_text"
            android:layout_width="match_parent"
            app:tabIndicatorHeight="2dp"
            android:layout_height="wrap_content"
            android:background="@color/white">
        </com.google.android.material.tabs.TabLayout>

        <View
            android:background="@color/home_list_back_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabLayout"
            android:layout_centerInParent="true"

            tools:layout_editor_absoluteX="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>