<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Campaign.Campaign_Name_Activity"
    tools:ignore="UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|left"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/camp_name"
                android:textColor="@color/text_reg_75" />


            <EditText
                android:id="@+id/edt_titale"
                style="@style/tv_regular_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/shap_10_line_view"
                android:hint="@string/camp_name"
                android:inputType="textCapSentences"
                android:maxLength="40"
                android:padding="15dp"
                android:textColorHint="@color/text_reg_75"
                tools:ignore="Autofill,HardcodedText,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/tv_error_title"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/camp_title"
                android:textColor="@color/shape_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/topic_remainingCharacter"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:alpha="0.6"
                android:gravity="center|left"
                android:lineSpacingExtra="5sp"
                android:padding="@dimen/_10sdp"
                android:text="@string/characters40"
                android:textColor="@color/text_reg_75"
                tools:ignore="TextContrastCheck" />


            <TextView
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|left"
                android:padding="@dimen/_10sdp"
                android:text="@string/max_message"
                android:textColor="@color/home_list_sub_data"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <EditText
                android:id="@+id/edt_day"
                style="@style/tv_regular_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/shap_10_line_view"
                android:digits="0123456789"
                android:focusable="true"
                android:hint="100/Day"
                android:inputType="number"
                android:maxLength="5"
                android:padding="@dimen/_10sdp"
                android:text="100"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_error_day"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/Max_prospects_add"
                android:textColor="@color/shape_red"
                android:visibility="gone"
                tools:ignore="HardcodedText" />


            <TextView
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|left"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/Schedule_Timezone"
                android:textColor="@color/text_reg_75"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/layout_time_zone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/shap_10_line_view">

                <TextView
                    android:id="@+id/txt_timezon"
                    style="@style/tv_regular_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/text_reg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_down" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_Curent_time"
                style="@style/tv_regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:alpha="0.6"
                android:gravity="center|left"
                android:lineSpacingExtra="5sp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/text_reg_75" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>