<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields">

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        tools:ignore="UseCompoundDrawables">

        <com.makeramen.roundedimageview.RoundedImageView
            android:visibility="gone"
            android:id="@+id/iv_select_type"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:riv_border_color="@color/purple_200"
            app:riv_border_width="1dp"
            app:riv_corner_radius="@dimen/_35sdp" />
        <LinearLayout
            android:id="@+id/layout_name"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_50_blue">
            <TextView
                android:id="@+id/txt_name"
                android:textColor="@color/white"
                style="@style/tv_regular_12"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_email_name"
            style="@style/tv_Medium_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/text_reg"
            tools:ignore="SelectableText" />

        <ImageView
            android:id="@+id/iv_is_default"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_yallow_circle"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="1"
            android:gravity="end|center">

            <ImageView
                android:id="@+id/iv_selected"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center|end"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/ic_ellipse"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/shape_primary_circle"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:id="@+id/iv_unselected"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center|end"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/ic_ellipse"
                android:padding="@dimen/_5sdp">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/line_camp" />
</LinearLayout>