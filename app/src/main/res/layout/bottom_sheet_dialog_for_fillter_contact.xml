<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/shape_white_top_left_right_20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:id="@+id/tv_item"
                style="@style/tv_Medium_14"
                android:text="Filters"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/text_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:id="@+id/tv_clear"
                style="@style/tv_Medium_14"
                android:text="Clear Filters"
                android:layout_gravity="center"
                android:gravity="center|end"
                android:textColor="@color/purple_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <View
            android:background="@color/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_select_check_box"
                android:id="@+id/iv_select_blacklist"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
            <ImageView
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_unselect_check_box"
                android:id="@+id/iv_unselect_blacklist"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp">

            </ImageView>
            <TextView
                android:id="@+id/tv_blacklist"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                style="@style/tv_Medium_14"
                android:text="@string/fillter_block"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/text_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_filtter_block"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp">

            </ImageView>
        </LinearLayout>
        <View
            android:background="@color/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_select_check_box"
                android:id="@+id/iv_select_all"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
            <ImageView
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_unselect_check_box"
                android:id="@+id/iv_unselect_all"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp">

            </ImageView>
            <TextView
                android:id="@+id/tv_allcompany"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                style="@style/tv_Medium_14"
                android:text="@string/fillter_all"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/text_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/shape_primary_back"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp">

            </ImageView>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:background="@color/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <TextView
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/tv_done"
            style="@style/tv_regular_13"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_10_blue"
            android:textSize="@dimen/_13sdp"
            android:text="Apply"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp">

        </TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>