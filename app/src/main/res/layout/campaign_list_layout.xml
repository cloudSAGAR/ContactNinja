<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/puse_icon"
            android:src="@drawable/ic_puse_icon"
            android:padding="@dimen/_7sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_red_circle"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"></ImageView>

        <ImageView
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/play_icon"
            android:src="@drawable/ic_play_icon"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_primary_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"></ImageView>
        <TextView
            android:layout_weight="2"
            android:id="@+id/campaign_name"
            style="@style/tv_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="@string/add_new_group_name"
            android:textColor="@color/bz_text"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/home_list_back_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>

</LinearLayout>