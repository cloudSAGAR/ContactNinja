<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_height="wrap_content">
    <TextView
        android:padding="@dimen/_10sdp"
        android:id="@+id/tv_item"
        style="@style/tv_regular"
        android:textStyle="bold"
        android:text="Phone"
        android:layout_weight="1"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/tv_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:id="@+id/iv_dufult"
        android:src="@drawable/shape_yallow_circle"
        android:layout_width="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_10sdp"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_weight="1"
        android:gravity="end|center">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_selected"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/ic_ellipse"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/shape_primary_circle">

        </ImageView>

        <ImageView
            android:id="@+id/iv_unselected"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/ic_ellipse"
            android:padding="@dimen/_5sdp">

        </ImageView>
    </LinearLayout>

</LinearLayout>