<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:background="@drawable/shape_border_20_white"
        android:orientation="vertical">\
        <LinearLayout
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText

                android:id="@+id/ev_subject"
                style="@style/tv_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"

                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/add_contect_transpernt"
                android:gravity="center|left"
                android:hint="Add Subject"
                android:textColor="@color/otp_header_text_color"
                android:textColorHint="@color/home_list_sub_data"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold">

            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/editText"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/home_list_add_contect_view"></View>

            <EditText

                android:id="@+id/ev_type"
                style="@style/tv_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/add_contect_transpernt"
                android:gravity="center|left"
                android:hint="Type ....."
                android:textColor="@color/otp_header_text_color"
                android:textColorHint="@color/home_list_sub_data"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold">

            </EditText>

        <View
            android:id="@+id/view_l"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/editText"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/home_list_add_contect_view"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_l"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="end|center">

                <TextView
                    android:id="@+id/tv_cancel"
                    style="@style/tv_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center|end"
                    android:text="Cancel"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/home_list_sub_data"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tv_add"
                    style="@style/tv_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"

                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center|end"
                    android:text="Send"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_group_otp_logo">

    </ImageView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>