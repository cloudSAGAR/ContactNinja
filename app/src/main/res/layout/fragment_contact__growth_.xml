<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView

                android:id="@+id/tv_last_time"
                style="@style/tv_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Today"
                android:textColor="@color/tv_medium"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/home_list_back_line" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_contec"
                android:weightSum="2"
                android:layout_marginStart="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center|left"

                    app:civ_border_width="0dp"
                    android:src="@drawable/green_circle"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/no_image"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    style="@style/tv_regular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/shape_primary_circle"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp">

                </TextView>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        style="@style/tv_regular"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text="TEST"
                        />
                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/home_list_sub_data"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/user_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textStyle="bold" />

                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/add_new_contect_icon"
                    android:src="@drawable/ic_plus_blue"
                    android:padding="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_oval_border_10_blue"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/remove_contect_icon"
                    android:src="@drawable/ic_done"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_blue_back_dialog"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

            </LinearLayout>

            <View
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/home_list_back_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>