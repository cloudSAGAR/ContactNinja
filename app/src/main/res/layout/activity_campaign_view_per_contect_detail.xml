<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mMainLayout"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields"
    tools:context=".Campaign.Campaign_view_per_contect_Detail">
    <include
        android:id="@+id/include2"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_pulse"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_oval_border_10_blue"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            tools:ignore="Orientation">
            <ImageView
                android:visibility="gone"
                android:padding="@dimen/_18sdp"
                android:id="@+id/pulse_icon"
                android:src="@drawable/ic_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseAppTint"/>
            <TextView
                android:textSize="@dimen/_20sdp"
                style="@style/tv_Medium"

                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_primary_circle"
                android:id="@+id/tv_nameLetter"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="TextViewEdits" />

        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/iv_user"
            android:visibility="gone"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="right"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:riv_border_color="@color/purple_200"
            app:riv_border_width="0dp"
            app:riv_corner_radius="@dimen/_50sdp"
            app:riv_oval="false" />


        <LinearLayout
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/add_contect_transpernt"
                android:id="@+id/tv_FirstName"
                style="@style/tv_bold"
                android:textSize="@dimen/_15sdp"
                android:hint="@string/f_name"
                android:inputType="text|textCapSentences"
                android:textColorHint="@color/home_list_sub_data"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/home_list_back_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_step"
                    style="@style/tv_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step#1 (Manual Sms)"
                    android:textColor="@color/tv_medium"
                    android:textSize="@dimen/_15sdp"/>

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_message">

                </ImageView>

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_email">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="4">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_totale"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Total "
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pending"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Pending "
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pushed"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Pushed "
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_finished"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Finished "
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_open"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Open"
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_replied"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Replied"
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_failed"
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/tv_medium"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        style="@style/tv_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Failed"
                        android:textColor="@color/tv_regular"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>