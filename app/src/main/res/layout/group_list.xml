<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/group_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/group_image"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_35sdp"
            android:src="@drawable/deafult_predefine_cover"
            app:riv_border_color="@color/purple_200"
            app:riv_border_width="0dp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"></com.makeramen.roundedimageview.RoundedImageView>

        <TextView
            android:id="@+id/group_name"
            style="@style/tv_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/add_new_group_name"
            android:textColor="@color/bz_text"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>