<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UselessParent,InefficientWeight,RtlHardcoded,ContentDescription"
android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/group_image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center|left"

            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/no_image"
            android:textStyle="bold"
            android:textColor="@color/white"
            style="@style/tv_regular"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/shape_primary_circle"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp">

        </TextView>


        <TextView
            android:layout_weight="2"
            android:id="@+id/group_name"
            style="@style/tv_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="@string/add_new_group_name"
            android:textColor="@color/bz_text"
            android:textStyle="bold"
          />
        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/add_new_contect_icon"
            android:src="@drawable/ic_plus_blue"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_oval_border_10_blue"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/remove_contect_icon"
            android:src="@drawable/ic_done"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_15_blue"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>

    </LinearLayout>

</LinearLayout>