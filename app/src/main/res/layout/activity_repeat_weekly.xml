<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mMainLayout"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields"
    tools:context=".Auth.Thankyou_Screen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>


        <TextView
            style="@style/tv_Medium_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:text="@string/week_text"
            android:textColor="@color/text_welcome"
            android:textSize="@dimen/_18sdp"
            >

        </TextView>

        <LinearLayout
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_weight="1"
                style="@style/tv_regular_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:text="@string/week_repete"
                android:textColor="@color/text_reg"
                >

            </TextView>
            <LinearLayout
                android:layout_weight="1"
                android:background="@drawable/shape_5_white_ccc_line"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/day_spinner"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_marginStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@android:layout/simple_spinner_item" />
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_down"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp">

                </ImageView>
            </LinearLayout>

            <TextView
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                style="@style/tv_regular_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/week_txt"
                android:textColor="@color/text_reg"
                >

            </TextView>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/spinner">

        </View>


        <TextView
            android:id="@+id/tv_day"
            android:drawableRight="@drawable/ic_right_arrow"
            android:layout_marginTop="@dimen/_20sdp"
            style="@style/tv_regular_13"
            android:paddingEnd="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/week_option"
            android:textColor="@color/text_reg"
            >
        </TextView>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/spinner">

        </View>


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingStart="@dimen/_5sdp"
                android:layout_weight="1"
                style="@style/tv_regular_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:text="End Date"
                android:textColor="@color/text_reg"
                >

            </TextView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/date_spinner"
                android:layout_gravity="center"
                android:gravity="center"

                android:drawableRight="@drawable/ic_down"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/shape_5_white_ccc_line"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@android:layout/simple_spinner_item" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>