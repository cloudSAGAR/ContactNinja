<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="HardcodedText,TextViewEdits,UseCompoundDrawables,TooManyViews,SelectableText,UseCompatTextViewDrawableXml,UselessParent,NestedWeights,DisableBaselineAlignment,ContentDescription,RtlHardcoded,InefficientWeight,NegativeMargin,RtlSymmetry,Autofill,LabelFor,TextFields"  tools:context=".Auth.Thankyou_Screen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_group_otp_logo"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_titele"
            style="@style/tv_Medium_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:textColor="@color/text_welcome"
            android:textSize="@dimen/_18sdp"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/la_date"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:id="@+id/tv_date"
                style="@style/tv_Medium_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_date"
                android:textColor="@color/text_reg"
                >
            </TextView>
            <ImageView
                android:id="@+id/iv_date"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_date_icon"
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
        </LinearLayout>
        <View
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/spinner"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout

            android:weightSum="1"
            android:id="@+id/la_time"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_time"
                android:layout_marginStart="@dimen/_5sdp"
                style="@style/tv_Medium_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_time"
                android:textColor="@color/text_reg"
                >

            </TextView>
            <ImageView
                android:id="@+id/iv_time"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_time_icon"
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
        </LinearLayout>
        <View
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/spinner"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <TextView
            android:id="@+id/tc_time_zone"
            android:layout_marginStart="@dimen/_22sdp"
            style="@style/tv_regular_12"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_date"
            android:textColor="@color/text_reg"
            >
        </TextView>
        <LinearLayout
            android:weightSum="1"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_recurrence"
                android:layout_marginStart="@dimen/_5sdp"
                style="@style/tv_Medium_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/broad_recurrence"
                android:textColor="@color/text_reg"
                >

            </TextView>
            <ImageView
                android:id="@+id/iv_down_arrow"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_down"
                android:backgroundTint="@color/home_list_sub_data"
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
        </LinearLayout>
        <View
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/spinner"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/tv_regular_12"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/broadcast_info_text"
            android:textColor="@color/text_reg"
            >
        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>