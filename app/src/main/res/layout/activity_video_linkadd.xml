<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mMainLayout"
    tools:context=".Bzcard.Media.Video.Video_LinkAdd_Activity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/layout_firstTime"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/add_new_contect"
            style="@style/tv_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:text="@string/Link_your_video"
            android:textColor="@color/text_reg"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <EditText
            android:id="@+id/edt_link_youtube"
            style="@style/tv_regular_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:autoLink="web"
            android:background="@color/add_contect_transpernt"
            android:gravity="center"
            android:hint="@string/url_hint"
            android:inputType="textUri"
            android:linksClickable="true"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/home_list_sub_data"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            android:importantForAutofill="no" />

        <View
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@color/home_list_sub_data"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/txt_invalid_link"
            style="@style/tv_regular_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:text="@string/invalid_url"
            android:textColor="@color/red"
            android:visibility="gone" />
        <TextView
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/btn_Link"
            style="@style/tv_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/shape_50_blue"
            android:gravity="center"
            android:text="@string/Link_Media"
            android:textColor="@color/white"
           >

        </TextView>

    </LinearLayout>

</RelativeLayout>