<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mMainLayout"
    tools:context=".Auth.Thankyou_Screen">

    <LinearLayout
        android:layout_marginBottom="@dimen/_100sdp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginStart="-27dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_group_otp_logo"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            style="@style/tv_Medium_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center|left"
            android:paddingStart="@dimen/_20sdp"
            android:text="@string/thanks_heder_text"
            android:textColor="@color/text_reg"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            style="@style/tv_regular_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="center|left"
            android:text="@string/thanks_info_text"
            android:textColor="@color/tv_regular"
            tools:ignore="RtlHardcoded" />


    </LinearLayout>

    <TextView
        android:id="@+id/start_button"
        style="@style/tv_regular_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="top"
        android:background="@drawable/shape_primary_back"
        android:gravity="center"
        android:text="@string/thanks_button_text"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>